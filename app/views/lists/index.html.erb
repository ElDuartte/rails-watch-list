<div>
  <div class="banner-image"></div>
  <div class="container mt-3">
    <h1 class="">Add a movie to watch</h1>
    <div class="mt-4 btn-div"><%= link_to "Add new movie", new_list_path, class: "btn btn-primary" %></div>
  </div>
  <div class="cards container my-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: url('default.jpg')">
        <%= link_to '', list_path(list), class: "card-category-link" %>
        <h3><%= list.name %></h3>
      </div>
    <% end %>
  </div>
</div>
